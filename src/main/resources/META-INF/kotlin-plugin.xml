<idea-plugin>
  <!-- Available in both IntelliJ IDEA and Android Studio when Kotlin plugin is installed -->

  <extensions defaultExtensionNs="com.intellij">
    <applicationService
      serviceInterface="com.cquilez.pitesthelper.application.port.out.PsiPort"
      serviceImplementation="com.cquilez.pitesthelper.infrastructure.adapter.KotlinPsiAdapter"
      overrides="true"/>

    <applicationService
      serviceInterface="com.cquilez.pitesthelper.infrastructure.ui.NavigatablePort"
      serviceImplementation="com.cquilez.pitesthelper.infrastructure.ui.adapter.KotlinNavigatableAdapter"
      overrides="true"/>
  </extensions>

</idea-plugin>

